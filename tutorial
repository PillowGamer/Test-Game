function tutorial() 

   print("Welcome to Unnamed Game! This will be your tutorial level. Press G to continue.")
    if io.read == "G" then 
      print("Good job! The G key will always be the key you press to continue onward.")
        if io.read == "G" then
          print ("Good! You remembered.")
              if io.read == "G" then
                  print ("Haha, good, now its firmly placed in that brain of yours.")
                    if io.read == "G" then
                      print ("You have reached the end of the tutorial level!")
                        if io.read == "G" then
                          dofile ("menu.lua")
                        end
                    end
              end
        end
    end
end
    
